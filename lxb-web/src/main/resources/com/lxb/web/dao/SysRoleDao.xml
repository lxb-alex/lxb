<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lxb.web.dao.SysRoleDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lxb.web.entity.SysRoleEntity" id="sysRoleMap">
		            <result property="id" column="id"/>
		            <result property="name" column="name"/>
		            <result property="createUserId" column="create_user_id"/>
		            <result property="createDate" column="create_date"/>
		    </resultMap>

    <!-- 表所有字段 -->
    <sql id="baseColumn">
         `id`,  `name`,  `create_user_id`,  `create_date`     </sql>

    <!-- 条件判断 -->
    <sql id="otherCondition">
                    <if test="id != null">AND `id` = #{id}, </if>
                    <if test="name != null">AND `name` = #{name}, </if>
                    <if test="createUserId != null">AND `create_user_id` = #{createUserId}, </if>
                    <if test="createDate != null">AND `create_date` = #{createDate}</if>
            </sql>

    <select id="getSysRoleEntity" resultType="com.lxb.web.entity.SysRoleEntity">
		select * from sys_role where id = #{value}
	</select>

    <select id="selectList" resultType="com.lxb.web.entity.SysRoleEntity">
        select * from sys_role
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="getTotal" resultType="int">
		select count(*) from sys_role
	</select>

    <insert id="save" parameterType="com.lxb.web.entity.SysRoleEntity" useGeneratedKeys="true" keyProperty="id">
        insert into sys_role
        (
                                    `name`, 
                                `create_user_id`, 
                                `create_date`
                    )
        values
        (
                                    #{name}, 
                                #{createUserId}, 
                                #{createDate}
                    )
    </insert>

    <insert id="saveSelective" parameterType="com.lxb.web.entity.SysRoleEntity" >
        insert into sys_role
        <trim prefix="(" suffix=")" suffixOverrides="," >
          <if test="id != null">`id`, </if>
          <if test="name != null">`name`, </if>
          <if test="createUserId != null">`create_user_id`, </if>
          <if test="createDate != null">`create_date`, </if>
    
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="id != null"> #{id}, </if>
            <if test="name != null"> #{name}, </if>
            <if test="createUserId != null"> #{createUserId}, </if>
            <if test="createDate != null"> #{createDate}</if>
            </trim>
        <selectKey resultType="Integer" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
    </insert>


    <update id="update" parameterType="com.lxb.web.entity.SysRoleEntity">
        update sys_role
        <set>
                                    <if test="name != null">`name` = #{name}, </if>
                                <if test="createUserId != null">`create_user_id` = #{createUserId}, </if>
                                <if test="createDate != null">`create_date` = #{createDate}</if>
                    </set>
        where id = #{id}
    </update>

    <update id="updateByPrimaryKeySelective" parameterType="com.lxb.web.entity.SysRoleEntity" >
        update sys_role
        <set >
                                        <if test="name != null">`name` = #{name,jdbcType=varchar}, </if>
                                <if test="createUserId != null">`create_user_id` = #{createUserId,jdbcType=int}, </if>
                                <if test="createDate != null">`create_date` = #{createDate,jdbcType=datetime}</if>
                        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>

    <delete id="delete">
		delete from sys_role where id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from sys_role where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>